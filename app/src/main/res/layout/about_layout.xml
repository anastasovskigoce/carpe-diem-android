<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/carpe_diem_image"
        android:layout_width="@dimen/capre_diem_image_width_height"
        android:layout_height="@dimen/capre_diem_image_width_height"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_carpe_diem_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_text_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_x_medium"
        android:layout_marginStart="@dimen/margin_x_medium"
        android:text="@string/about_text_primary"
        android:textSize="@dimen/text_size_medium_large"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carpe_diem_image" />

    <TextView
        android:id="@+id/about_text_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_x_medium"
        android:layout_marginStart="@dimen/margin_x_medium"
        android:layout_marginTop="@dimen/margin_x_medium"
        android:text="@string/about_text_secondary"
        android:textSize="@dimen/text_size_medium_large"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_text_primary" />

</androidx.constraintlayout.widget.ConstraintLayout>